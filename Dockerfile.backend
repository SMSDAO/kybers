# Node.js backend services
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY services/package*.json ./
RUN npm ci --only=production

# Copy source code
COPY services/ ./

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node healthcheck.js

EXPOSE 4000

CMD ["node", "index.js"]
